<h2><%= @goal.name %></h2>

<%= button_to "Edit Goal", edit_goal_url(@goal), :method => :get %>

<% unless @goal.owner == current_user %>
  <%= button_to "Cheer Goal", goal_cheers_url(@goal) %>
<% end %>

<% if @cheers %>
<ul>
  <% @cheers.each do |ch| %>

  Cheer from <%= ch.cheerleader_id %> !

  <% end %>
</ul>
<% end %>
